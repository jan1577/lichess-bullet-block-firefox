{
    "manifest_version": 3,
    "name": "LichessBulletBlock",
    "version": "1.0.0",
  
    "description": "Remove Bullet Games from Lichess, optionally block Blitz Games and Puzzle Variants",
    
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },

    "permissions": [
        "storage"
    ],

    "icons": {
        "16": "/images/16.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
    },
    "action": {
        "default_icon": {
            "16": "/images/16.png",
            "48": "/images/48.png",
            "128": "/images/128.png"
        }
    },

    "content_scripts": [
    {
        "js" : [
                "content.js",
                "puzzle.js"
               ],
        "matches" : ["https://lichess.org/*"]
    }],

    "browser_specific_settings": {
        "gecko": {
          "id": "LichessBulletBlock@6a000b45-4a8a-4e5f-87af-924632e83527"
        }
      }
}
  